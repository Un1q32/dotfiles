syntax on
colors default
let &t_SI = "\e[6 q"
let &t_EI = "\e[2 q"
let mapleader = ' '
set autoindent
set expandtab
set shiftround
set shiftwidth=4
set smarttab
set tabstop=4
set mouse=a
set dir=~/.cache/vim
set clipboard=unnamedplus
set viminfo=
set backspace=indent,eol,start
set wildmenu

nnoremap <silent> <leader>h :nohlsearch<CR>
